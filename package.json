{
  "name": "mol",
  "version": "1.2.0",
  "description": "Modular CSS Library",
  "scripts": {
    "dist": "sass scss/_mol.scss:dist/mol.min.css --style compressed",
    "docs": "npm run scss | npm run start",
    "start": "browser-sync start --server 'docs' --files 'docs'",
    "scss": "sass --watch scss/_mol.scss:docs/mol.css --style expanded"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mol-project/mol.git"
  },
  "keywords": [
    "mol",
    "sass",
    "scss",
    "css",
    "frontend",
    "framework",
    "mol-framework"
  ],
  "author": "flkt <flkt.crnpio@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mol-project/mol/issues"
  },
  "homepage": "https://github.com/mol-project/mol#readme",
  "dependencies": {
    "mol.color": "git+https://github.com/mol-project/mol.color.git#v.1.2.0",
    "mol.core": "git+https://github.com/mol-project/mol.core.git#v.3.1.0",
    "mol.grid": "git+https://github.com/mol-project/mol.grid.git#v.2.1.0",
    "mol.normalize": "git+https://github.com/mol-project/mol.normalize.git#v.2.0.3"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3"
  }
}
